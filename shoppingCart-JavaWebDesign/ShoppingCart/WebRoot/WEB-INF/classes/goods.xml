<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="goods" namespace="/" extends="struts-default">  
	    <action name="showGoods" class="com.web.action.ShowGoodsAction">    
		    <result name="success">/index.jsp</result>  
		    <result name="error">/login.jsp</result>  
	    </action> 
	      <action name="addCount" class="com.web.action.DetailsAction" method="addCount">    
		    <result name="success">/details.jsp</result>   
	    </action> 
	     <action name="details" class="com.web.action.DetailsAction" method="showDetails">    
		    <result name="success">/details.jsp</result>   
	    </action>  
    </package>  
</struts>    
